# Server Configuration
NODE_ENV=development
PORT=3002

# Database Configuration
# MongoDB Atlas Connection String
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster-url/txova_marketplace?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster-url/txova_marketplace?retryWrites=true&w=majority

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_URL_PROD=redis://your-production-redis-url

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@txova.com
EMAIL_FROM_NAME=Txova Marketplace

# Payment Gateway Configuration
# M-Pesa Configuration (Phase 6 - Local Payment Integration)
MPESA_API_KEY=your-mpesa-api-key
MPESA_BASE_URL=https://sandbox.safaricom.co.ke
MPESA_BUSINESS_SHORT_CODE=your-business-short-code
MPESA_PASSKEY=your-mpesa-passkey

# E-Mola Configuration (Phase 6 - Local Payment Integration)
EMOLA_API_KEY=your-emola-api-key
EMOLA_BASE_URL=https://api.emola.co.mz

STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Email Service Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# Alternative Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@txova.com
EMAIL_FROM_NAME=Txova Marketplace

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Test Email (for testing email service)
TEST_EMAIL=test@example.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# Logging
LOG_LEVEL=info

# Review System Configuration
REVIEW_MODERATION_ENABLED=true
AUTO_APPROVE_REVIEWS=false
REVIEW_RATING_THRESHOLD=1

# Wishlist Configuration
WISHLIST_MAX_ITEMS=100
WISHLIST_EXPIRY_DAYS=365

# Recommendation System
RECOMMENDATION_ENGINE_ENABLED=true
RECOMMENDATION_ALGORITHM=collaborative
RECOMMENDATION_MAX_ITEMS=10

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000

# Development Configuration
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true
